---
import '@fontsource-variable/oswald'
import '@fontsource/didact-gothic'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script
      src="https://kit.fontawesome.com/9fc33c5ba3.js"
      crossorigin="anonymous"
    ></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
/* Custom properties / variables */
:root {
  --main-color: #d70000;
  --aux-color: gold;
  --primary-bg-color: white;
  --secondary-bg-color: gray;
  --main-font-color: black;
  --secondary-font-color: #555;
  --aux-font-color: white;
  --small-font-size: 1.1rem;
  --medium-font-size: 2.3rem;
  --big-font-size: 3.5rem;
  --huge-font-size: 8rem;

  --noisy-bg: 
    linear-gradient(rgba(235,235,235,.5), rgba(255,255,255,.15)),
    url('/src/assets/noise.svg');

  color-scheme: dark light;
}


/* base reset */
* {
  margin: 0;
  padding: 0;
}

/* box sizing and font sizing */
*,
*::before,
*::after {
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
  font-size: 65.5%;
  /* 10px */
  scroll-behavior: smooth;
}

/* different screen font sizes media queries */
/* 1200px / 16px = 75em */
@media (max-width: 75em) {
  html {
    font-size: 60%;
  }
}

/* 980px / 16px = 61.25em */
@media (max-width: 61.25em) {
  html {
    font-size: 58%;
  }
}

/* 460px / 16px = 28.75em */
@media (max-width: 28.75em) {
  html {
    font-size: 55%;
  }
}

body {
  font-family: 'Didact Gothic', sans-serif;
  font-size: 1.8rem;
  color: var(--main-font-color);
  max-width: 900px;
  padding: 0 1rem;
  margin: auto;
}

h1, h2, h3, h4, h5, h6, .nav-link, .button {
  font-family: 'Oswald Variable', sans-serif;
}

a {
  text-decoration: none;
  color: inherit;
}

strong {
  color: var(--main-color);
}

p {
  margin-bottom: 0.5rem;
}

/* Components */

.subtitle {
  color: var(--main-color);
  font-style: italic;
}

.no-bullet {
  list-style: none;
}

.uppercase {
  text-transform: uppercase;
}

.button {
  cursor: pointer;
  padding: 1.15rem 1rem ;
  text-transform: uppercase;
  font-weight: bold;
  border: 2px solid var(--main-color);
}

.button:hover {
  color: var(--main-color);
}

button:active {
  background-color: rgba(55, 55, 55, 0.1);
  color: var(--aux-font-color);
}

/* website font sizes */
.small-font {
  font-size: var(--small-font-size);
}

.medium-font {
  font-size: var(--medium-font-size);
}

.big-font {
  font-size: var(--big-font-size);
}

.huge-font {
  font-size: var(--huge-font-size);
}

@media (prefers-color-scheme: dark) {
  :root {
    --main-color: #00e1ff;
    --aux-color: gold;
    --main-font-color: white;
    --primary-bg-color: #111;
    --secondary-font-color: rgb(254, 240, 138);
    --aux-font-color: black;
    background-color: var(--primary-bg-color);
  }

  strong {
    color: var(--secondary-font-color);
  }

}

</style>
