---
import Section from "../Section.astro";
---

<Section id="contact-section">
      <div class="contact__container">
      <h2 class="huge-font title">Let's work together</h2>
      <form action="send:edwarhman@gmail.com" method="post" class="contact-form">
        <button class="button big-font" id="contact-button">Email me</button>
      </form>
      <div class="contact-links__container">
        <p class="description">You can also reach me on:</p>
        <ul class="no-bullet contact-links big-font">
          <li>
            <a
              href="https://www.linkedin.com/in/emersonwarhman/"
              target="_blank"
              aria-label="LinkedIn"
              ><i class="fab fa-linkedin"></i
            ></a>
          </li>
          <li>
            <a
              href="https://github.com/edwarhman"
              target="_blank"
              aria-label="GitHub"
              ><i class="fab fa-github"></i
            ></a>
          </li>
        </ul>
      </div>
      </div>
</Section>
<style>
/* contact section */

.contact__container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  min-height: 95vh;
}

@media (min-width: 75em) {
  #contact-section .huge-font {
    font-size: 12rem;
    margin-top: 4rem;
  }
}

.title {
  text-align: center;
  margin-bottom: 2rem;
}

#contact-button {
  padding: 1.15em 1em;
  margin-top: 4rem;
}

.contact-links {
  display: flex;
  justify-content: space-between;
  margin-top: 2rem;
}

.fab:hover {
  color: red;
}
</style>