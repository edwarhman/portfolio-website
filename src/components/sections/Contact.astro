---
import GitHub from "@/assets/icons/GitHub.astro";
import Section from "../Section.astro";
import LinkedIn from "@/assets/icons/LinkedIn.astro";
---

<Section id="contact-section">
      <div class="contact__container">
      <h2 class="huge-font title uppercase">Let's work together</h2>
      <a href="mailto:edwarhman@gmail.com" class="button big-font" id="contact-button">Email me</a>
      <div class="contact-links__container">
        <p class="description">You can also reach me on:</p>
        <ul class="no-bullet contact-links big-font">
          <li>
            <a
              href="https://www.linkedin.com/in/emersonwarhman/"
              target="_blank"
              aria-label="LinkedIn"
              >
              <LinkedIn width={32} height={32} />
            </a>
          </li>
          <li>
            <a
              href="https://github.com/edwarhman"
              target="_blank"
              aria-label="GitHub"
              >
              <GitHub width={32} height={32} />
            </a>
          </li>
        </ul>
      </div>
      </div>
</Section>
