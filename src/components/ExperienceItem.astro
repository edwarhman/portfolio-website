---
import type { CollectionEntry } from 'astro:content'
export interface Props {
  experience: CollectionEntry<"experience">
}

const { experience } = Astro.props
const startDate = getDisplayDate(experience.startDate)
const endDate = getDisplayDate(experience.endDate)

function getDisplayDate(dateString: string) {
  const year = new Date(dateString).getUTCFullYear()
  const month = new Date(dateString).getMonth()
  return month + '-' + year
}
---
<li>
  <em>{startDate} - {endDate}</em>
  <h3> {experience.position} at <a href={experience.companyUrl} target="_blank">{experience.companyName}</a></h3>
  <p>{experience.details}</p>
</li>

